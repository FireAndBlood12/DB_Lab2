@model DB_LAB2.Models.Teachers.TeachersViewModel

@{
    ViewData["Title"] = "Teachers";
}

<h1>Teachers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div>
    <form asp-action="Index">
        <div class="form-group">
            <label asp-for="MinExp" class="control-label"></label>
            <input asp-for="MinExp" min="0" max="60" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="MaxExp" class="control-label"></label>
            <input asp-for="MaxExp" min="0" max="60" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SubjectTitle" class="control-label"></label>
            <input asp-for="SubjectTitle" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Experience
            </th>
            <th>
                Main Subject Id
            </th>
            <th>
                Main Subject Title
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Teachers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Experience)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MainSubject.Id)
                </td>
                <td>
                    @item.MainSubject.Title
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{ await Html.RenderPartialAsync("Pagination", Model.PageViewModel);}